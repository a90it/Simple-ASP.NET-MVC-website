@using Microsoft.AspNet.Identity
<!DOCTYPE html>
<html>
<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <link rel="shortcut icon" type="image/ico" href="@Url.Content("~/favicon.ico")">
    <title>@ViewBag.Title - MvcTemplate</title>
    @Styles.Render("~/Content/css")
</head>
<body>
    <div class="navbar navbar-inverse navbar-fixed-top">
        <div class="container">
            <div class="navbar-header">
                <button type="button" class="navbar-toggle" data-toggle="collapse" data-target=".navbar-collapse">
                    <span class="icon-bar"></span>
                    <span class="icon-bar"></span>
                    <span class="icon-bar"></span>
                </button>
                @Html.ActionLink("WEBSITE - homepage", "Index", "Home", new { area = string.Empty }, new { @class = "navbar-brand", id = "ApplicationLogo" })
            </div>
            <div class="navbar-collapse collapse">
                <ul class="nav navbar-nav">
                    <li>@Html.ActionLink("Forum", "All", "Posts", new { area = string.Empty }, null)</li>
                    <li>@Html.ActionLink("Suggestions", "All", "Suggestions", new { area = string.Empty }, null)</li>
                    <li>@Html.ActionLink("Jokes", "Random", "Jokes", new { area = string.Empty }, null)</li>
                    <li>@Html.ActionLink("Downloads", "All", "Downloads", new { area = string.Empty }, null)</li>
                    <li>@Html.ActionLink("Contacts", "Index", "Contacts", new { area = string.Empty }, null)</li>
                </ul>
                @if (User.IsInRole("Administrator") == true)
                {
                    @Html.ActionLink("ADMINISTRATION", "Index", "AdminHome", new { area = "Administration" }, new { @class = "btn btn-danger navbar-btn", role = "button" })
                    <a href="/Glimpse.axd" class="btn btn-danger navbar-btn" role="button">GLIMPSE</a>
                }
                @Html.Partial("_LoginPartial")
            </div>
        </div>
    </div> 
    <div class="container body-content">
        @RenderBody()
        <hr id="footerHr"/>
        <footer>
            <div id="bottom-line"><p>&copy; @DateTime.UtcNow.Year - WEBSITE</p></div>
        </footer>
    </div>

    @Scripts.Render("~/bundles/jquery")
    @Scripts.Render("~/bundles/bootstrap")
    @Scripts.Render("~/bundles/jqueryval")
    @RenderSection("scripts", required: false)
</body>
</html>
